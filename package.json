{
  "name": "podcastomatic",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "postinstall": "bash scripts/setup-env.sh",
    "setup": "bash scripts/setup-env.sh",
    "dev": "vite",
    "dev:server": "tsx watch --env-file=.env.local server/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "build": "tsc && vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "start:server": "node dist-server/index.js",
    "preview": "vite preview",
    "remotion:preview": "remotion preview src/remotion/index.ts",
    "remotion:render": "remotion render src/remotion/index.ts",
    "remotion:studio": "remotion studio src/remotion/index.ts",
    "test": "vitest run --config server/vitest.config.ts",
    "test:watch": "vitest --config server/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config server/vitest.config.ts",
    "test:unit": "vitest run --config server/vitest.config.ts --dir server/__tests__/unit",
    "test:integration": "vitest run --config server/vitest.config.ts --dir server/__tests__/integration",
    "test:e2e": "SKIP_REAL_API_TESTS=false vitest run --config server/vitest.config.ts --dir server/__tests__/e2e",
    "test:generate-fixtures": "tsx server/__tests__/fixtures/generate-fixtures.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit && tsc -p server/tsconfig.json --noEmit",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "@remotion/cli": "^4.0.409",
    "@remotion/renderer": "^4.0.409",
    "@tanstack/react-query": "^5.90.20",
    "@vercel/blob": "^2.0.1",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.1",
    "express": "^4.21.2",
    "form-data": "^4.0.1",
    "jsonwebtoken": "^9.0.3",
    "lottie-react": "^2.4.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^6.17.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.13.0",
    "remotion": "^4.0.409",
    "resend": "^6.9.1",
    "wavesurfer.js": "^7.12.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/supertest": "^6.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "msw": "^2.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "supertest": "^7.0.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^7.0.4",
    "vitest": "^3.0.0"
  }
}
